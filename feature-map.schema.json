{
    "$id": "https://github.com/vaultinum/feature-map/feature-map.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Feature-Map",
    "description": "A feature-map describing the list of features for a given product",
    "type": "object",
    "properties": {
        "productName": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "features": {
            "type": "object",
            "propertyNames": {
                "pattern": "^[A-Z].*"
            },
            "additionalProperties": {
                "$ref": "#/definitions/feature"
            }
        }
    },
    "required": [
        "productName"
    ],
    "additionalProperties": false,
    "definitions": {
        "feature": {
            "type": "object",
            "properties": {
                "features": {
                    "type": "object",
                    "propertyNames": {
                        "pattern": "^[A-Z].*"
                    },
                    "additionalProperties": {
                        "$ref": "#/definitions/feature"
                    }
                },
                "criticity": {
                    "type": "string",
                    "enum": [
                        "low",
                        "medium",
                        "high"
                    ]
                },
                "description": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    }
}